   end ;

txt.putfrac (intr, 5) ;

if txt <> "       0.210 00" and
   txt <> "        .210 00" and
   txt <> "         .21000" and   ! 26/3-2018  MYH ;
   txt <> "         .21000" then  ! 26/3-2018  MYH ;
