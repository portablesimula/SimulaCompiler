   outtext (txt) ;
   outimage ;
   
   end ;

txt :- copy ("1 abcdefgh") ;
rea := txt.getreal ;
txt.putreal (rea, 1) ;

if txt = "     1&+00"
or txt = "    1.&+00" then                      !********* NOTE 1 ************;
else
