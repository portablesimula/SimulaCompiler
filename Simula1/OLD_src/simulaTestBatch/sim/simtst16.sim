      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;

   t1 :- copy ("abc  ");
   t2 :- t1.strip;

   if     t1 == t2.main
      and t2 = t1.sub (1,3)
      and not t2.constant
      and t2.length = 3 then
   else
   begin
      Outtext ("*** error : Text procedure Strip (3).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t1.start, 3);
      Outint (t1.length, 3);
      Outint (t1.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t1);
      Outtext ("            ");
      Outtext (t1.main);
      Outimage; Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;

   t1 :- copy ("   ");
   t2 :- t1.strip;

   if     t2 == notext
      and t2.constant then
   else
   begin
      Outtext ("*** error : Text procedure Strip (4).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;


   t1 :- "abcd";
   t2 :- t1.strip;

   if     t1 == t2
      and t2 = "abcd"
      and t2.constant then
   else
   begin
      Outtext ("*** error : Text procedure Strip (5).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;

   t1 :- "abcd  ";
   t2 :- t1.strip;

   if     t2.main == t1
      and t2 = "abcd"
      and t2 == t1.sub (1,4)
      and t2.constant then
   else
   begin
      Outtext ("*** error : Text procedure Strip (6).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;

   t1 :- "abcd  ";
   t1.setpos(2);
   t2 :- t1.strip;

   if     t2.main == t1
      and t2 = "abcd"
      and t2.pos = 1
      and t2 == t1.sub (1,4)
      and t2.constant then
   else
   begin
      Outtext ("*** error : Text procedure Strip (7).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;


   t1 :- "   ";
   t2 :- t1.strip;

   if     t2 == notext
      and t2.constant then
   else
   begin
      Outtext ("*** error : Text procedure Strip (8).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;

   t1 :- copy ("abcde");
   t2 :- t1.sub (3,3);
   t2 := "aba";

   if     t1 == t2.main
      and t1 = "ababa"
      and not t1.constant
      and not t2.constant then
   else
   begin
      Outtext ("*** error : Text procedure Sub (4).");
      Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t1.start, 3);
      Outint (t1.length, 3);
      Outint (t1.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t1);
      Outtext ("            ");
      Outtext (t1.main);
      Outimage; Outimage;
      Outtext ("            Erroneous values :");
      Outtext ("            ");
      Outint (t2.start, 3);
      Outint (t2.length, 3);
      Outint (t2.pos, 3);
      Outimage;
      Outtext ("            ");
      Outtext (t2);
      Outtext ("            ");
      Outtext (t2.main);
      Outimage; Outimage;
      found_error := true
   end;



   IF found_error THEN
   ELSE
   BEGIN
      Outtext ("--- NO ERRORS FOUND IN TEST 16");
   END;

   if verbose then begin
      Outtext ("--- END Simula a.s. TEST 16");
      Outimage;
   end;
 END;
