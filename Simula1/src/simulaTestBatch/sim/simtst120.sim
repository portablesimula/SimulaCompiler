begin
   Boolean verbose=FALSE;
   Boolean found_error ;
   integer traceCase;
   text array facit(0:9);
   boolean b;
   integer i;
   
   procedure trace(msg); text msg;
   begin
      if verbose then begin outtext(msg); outimage; end;
      if msg NE facit(traceCase) then
      begin
         found_error:=TRUE;
         outtext("ERROR in Case "); outint(traceCase,0); outimage;
         outtext("Trace: " & msg); outimage;
         outtext("Facit: " & facit(traceCase)); outimage;
      end;
      traceCase:=traceCase+1;
   end;

   
   if verbose then begin
   Outtext("--- START SIMULA TEST 120"); Outimage ;
   Outtext("--- VERY LOCAL GOTO SAMPLE");
   Outimage; Outimage;
   end;
   
   facit(0):-"At START";
   facit(1):-"At START";
   facit(2):-"Before GOTO LAB2";
   facit(3):-"At LAB2";
   facit(4):-"At LAB3";
   facit(5):-"At LAB4";
   facit(6):-"At LAB5";
   facit(7):-"At LAB8";
   facit(8):-"At LAB9";
   facit(9):-"At END OF TEST";
  
   i:=2;
   
STARTING: trace("At START");

   b:= not b;
   
   if b then goto STARTING;
   
%   if i=2 then
    trace("Before GOTO LAB2");
    goto LAB2;
   
LAB1:trace("At LAB1");
LAB2:trace("At LAB2");
LAB3:trace("At LAB3");
LAB4:trace("At LAB4");
LAB5:trace("At LAB5");
     goto LAB8;
LAB6:trace("At LAB6");
LAB7:trace("At LAB7");
LAB8:trace("At LAB8");
LAB9:trace("At LAB9");
   
   trace("At END OF TEST");
      
   IF found_error THEN
   ELSE
   BEGIN
      Outtext ("--- NO ERRORS FOUND IN TEST 120");
   END ;

   if verbose then begin
      Outimage;
      Outtext ("--- END SIMULA TEST 120") ;
      Outimage;
   end;
   

 END
